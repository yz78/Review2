        /* Couleurs principales */
        :root {
            --color-bg: #221e1f;
            --color-primary: #2f32dc;
            --color-secondary: #4525d0;
            --color-tertiary: #5c19c4;
            --color-accent: #730db8;
        }

        /* Barre de navigation */
        .navbar {
            width: 100%;
            background-color: var(--color-bg);
            color: #ffffff;
            padding: 15px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            z-index: 1000;
        }

        .navbar a {
            color: #ffffff;
            text-decoration: none;
            padding: 10px 30px;
            font-weight: bold;
            font-size: 1.1em;
            transition: color 0.3s;
        }

        .navbar a:hover {
            color: var(--color-accent);
        }

        .navbar .logo img{
            height: 60px;
        }

        

     /* Footer */




    </style>

    <!-- Barre de navigation -->
    <nav class="navbar navbar-expand-lg">
        <a href="/" class="logo">
            <img src="{{ asset('image/logo.png') }}" alt="Logo Review Original">
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a href="/" class="nav-link">Accueil</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item active">
                    <a href="{{ path('app_categorie_index') }}" class="nav-link">Catégorie</a>
                </li>
                {% endif %}
            
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Vidéos</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/list/Video">Mes vidéos</a>
                        <a class="dropdown-item" href="/list/allVideo">Toutes les vidéos</a>
                    </div>
                </li>
              {% if is_granted('ROLE_ADMIN') %}
                 <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Utilisateurs</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('app_gestion_profil_index') }}">tout les utilisateur</a>
                       {#  <a class="dropdown-item" href="{{ path('app_user_index') }}">Créateurs de contenu</a>
                        <a class="dropdown-item" href="{{ path('app_user_index') }}">Viewers</a> #}
                    </div>
                </li>
                {% endif %}
                
            </ul>

          {% if is_granted('ROLE_USER') %}
             <div class="dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="{{ asset('image/profil.webp') }}" alt="Profil" class="rounded-circle" width="40" height="40">
            </a>
            
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="{{ path('app_createur_contenu_profil', {id: app.user.id}) }}">Mon Profil</a>

                <a class="dropdown-item" href="{{ path('app_change_password') }}">Changer de mot de passe</a>

                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary">Connexion</a>
            {% endif %}
        </div>
        </div>
    </nav>

